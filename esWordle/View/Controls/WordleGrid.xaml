<UserControl x:Class="esWordle.View.Controls.WordleGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:esWordle.View.Controls"
             xmlns:viewmodel="clr-namespace:esWordle.ViewModel" 
             xmlns:utils="clr-namespace:esWordle.ViewModel.Utils" 
             xmlns:converter="clr-namespace:esWordle.View.Converter" 
             d:DataContext="{d:DesignInstance Type=viewmodel:WordleGridViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--Word grid-->
        <Grid
            MaxWidth="600"
            Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <TextBox 
                x:Name="FirstInput" 
                Grid.Row="0"
                Style="{StaticResource GameTextBox}" 
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.First}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.First}"></Binding>
                                <Binding Path="Text" ElementName="FirstInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox 
                x:Name="SecondInput" 
                Grid.Row="1"
                Style="{StaticResource GameTextBox}" 
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.Second}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.Second}"></Binding>
                                <Binding Path="Text" ElementName="SecondInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox 
                x:Name="ThirdInput" 
                Grid.Row="2" 
                Style="{StaticResource GameTextBox}" 
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.Third}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.Third}"></Binding>
                                <Binding Path="Text" ElementName="ThirdInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox 
                x:Name="FourthInput" 
                Grid.Row="3" 
                Style="{StaticResource GameTextBox}"
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.Fourth}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.Fourth}"></Binding>
                                <Binding Path="Text" ElementName="FourthInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox 
                x:Name="FifthInput"
                Grid.Row="4"
                Style="{StaticResource GameTextBox}" 
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.Fifth}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.Fifth}"></Binding>
                                <Binding Path="Text" ElementName="FifthInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox 
                x:Name="SixthInput" 
                Grid.Row="5"
                Style="{StaticResource GameTextBox}"
                IsEnabled="{Binding CurrentTry, Mode=TwoWay, Converter={converter:InputTriesToBoolConverter}, 
                    ConverterParameter={x:Static utils:InputTry.Sixth}}">
                <TextBox.InputBindings>
                    <KeyBinding 
                        Key="Return"
                        Command="{Binding ConfirmInputCommand}">
                        <KeyBinding.CommandParameter>
                            <MultiBinding Converter="{converter:InputConverter}">
                                <Binding Source="{x:Static utils:InputTry.Sixth}"></Binding>
                                <Binding Path="Text" ElementName="SixthInput"></Binding>
                            </MultiBinding>
                        </KeyBinding.CommandParameter>
                    </KeyBinding>
                </TextBox.InputBindings>
            </TextBox>
        </Grid>
        <!--Keyboard grid-->
        <Grid
            Grid.Row="1">
        </Grid> 
    </Grid>
</UserControl>
